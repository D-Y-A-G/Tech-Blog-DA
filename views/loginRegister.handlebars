{{! Sign-up Form }}
<form class="signup-form">
  <div class="from-group">
    <label for="name-signup">Name:</label>
    <input type="text" class="form-input" id="name-signup" />
  </div>
  <div class="from-group">
    <label for="email-signup">Email:</label>
    <input type="text" class="form-input" id="email-signup" />
  </div>
  <div class="from-group">
    <label for="password-signup">Password:</label>
    <input type="password" class="form-input" id="password-signup" />
  </div>
  <button class="btn" type="submit">Signup</button>
</form>
{{! Login }}
<form class="login-form">
  <div class="from-group">
    <label for="email-login">Email:</label>
    <input type="text" class="form-input" id="email-login" />
  </div>
  <div class="from-group">
    <label for="password-login">Password:</label>
    <input type="password" class="form-input" id="password-login" />
  </div>
  <button class="btn" type="submit">Login</button>
</form>

<script src="./js/login.js"></script>